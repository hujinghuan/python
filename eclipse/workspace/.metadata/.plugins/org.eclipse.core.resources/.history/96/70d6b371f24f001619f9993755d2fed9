all_data={}
for ticker in ['AAPL','IBM','MSFT','GOOG']:
    all_data[ticker]=pdr.get_data_yahoo('AAPL')
price=DataFrame({tic:data['Adj Close']
                 for tic,data in all_data.iteritems()})
volume=DataFrame({tic:data['Volume']
                  for tic,data in all_data.iteritems()})
returns=price.pct_change()
returns.tail()